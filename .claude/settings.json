      "Bash(poetry run pytest:*)",
      "Bash(poetry run black:*)",
      "Bash(poetry run isort:*)",
      "Bash(git commit:*)",
      "Bash(make:*)",
      "Bash(cat:*)",
      "Bash(rg:*)",
      "Bash(git checkout:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(for:*)",
      "Bash(do sed -i 's/a2a_mvp/a2a/g' \"$file\")",
      "Bash(done)",
      "Bash(mkdir:*)",
      "Bash(rmdir:*)",
      "Bash(tree:*)",
      "Bash(sed:*)",
      "Bash(touch:*)",
