      "Bash(tmux:*)",
      "Bash(date:*)",
      "Bash(stat:*)",
      "Bash(realpath:*)",
      "Bash(unset:*)",
      "Bash(source:*)",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "Bash(cp:*)",
      "Bash(rm:*)",
      "Bash(./hello)",
      "Bash(.claude/commands/hello.sh:*)",
