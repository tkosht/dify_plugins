{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["stages"],
  "$defs": {
    "stage_spec": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "prompt": {
          "type": "string"
        },
        "instructions": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/stage_spec"
      }
    },
    "allow_dynamic_stages": {
      "type": "boolean"
    },
    "allowed_stage_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "max_total_prompt_chars": {
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}
