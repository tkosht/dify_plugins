{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "schema_version",
    "pipeline_run_id",
    "task",
    "facts",
    "open_questions",
    "assumptions",
    "draft",
    "critique",
    "revise"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.1"
    },
    "pipeline_run_id": {
      "type": "string",
      "minLength": 1
    },
    "task": {
      "type": "object",
      "required": ["goal"],
      "properties": {
        "goal": {
          "type": "string",
          "minLength": 1
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "facts": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "open_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "draft": {
      "type": "object"
    },
    "critique": {
      "type": "object"
    },
    "revise": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
